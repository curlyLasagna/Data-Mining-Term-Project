  pkgs,
  lib,
  config,
  inputs,
  ...
}:

{
  # https://devenv.sh/basics/
  env.GREET = "devenv";

  # https://devenv.sh/packages/
  packages = with pkgs; [
    git
    typst
    tinymist
    gyre-fonts
  ];
  languages.python = {
    enable = true;
    version = "3.14.0";
    venv.enable = true;

    uv = {
      enable = true;
      sync.enable = true;
      sync.allExtras = true;
    };
  };

  # https://devenv.sh/processes/
